<h1><%= @project.name %></h1>
<table>
  <tr>
    <th align="left">Company</th>
    <td><%= @project.company.name %></td>
  </tr>
  <tr>
    <th align="left">Default Rate</th>
    <td><%= number_to_currency(@project.default_rate) %></td>
  </tr>
  <tr>
    <th align="left">Slug</th>
    <td><%= @project.slug %></td>
  </tr>
</table>
<br />
<table>
  <tbody>
    <tr>
      <th>Project</th>      
      <th>User</th>
      <th>Date/Time Performed</th>
      <th>Hours</th>
      <th>View</th>
    </tr>
    <%= render partial: "works/work", collection: @project.works %>
  </tbody>
</table>

<% content_for :aside do %>
  <% render "sidebar" %>
<% end %>